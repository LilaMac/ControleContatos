@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuários";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="Usuario" asp-action="Criar" role="button">Adicionar novo Usuário</a>
    </div>

</div>
<br />
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<h1>Listagem de Usuarios</h1>

<table class="display" id="TableUsuarios" style="width:100%">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Login</th>
            <th scope="col">Email</th>
            <th scope="col">Data Cad Usuario</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var usuario in Model)
            {
                <tr>
                    <th scope="row">@usuario.UsuarioID</th>
                    <td>@usuario.UsuarioNome</td>
                    <td>@usuario.Login</td>
                    <td>>@usuario.Email</td>
                    <td>>@usuario.DataCadastro</td>
                    <td>
                        <div class="btn-grooup" role="group">
                            <a role="button" asp-action="Editar" asp-controller="Usuario" asp-asp-route="@usuario.UsuarioID" class="btn btn-primary">Editar</a>
                            <a role="button" asp-action="Editar" asp-controller="ApagarConfirmacao" asp-asp-route="@usuario.UsuarioID" class="btn btn-danger">Apagar</a>
                        </div>
                    </td>

                </tr>
            }

        }
        else
        {
            <tr class="odd">
                <td valign="top" colspan="5">Nenhum Usuário Encontrado</td>
            </tr>
        }
    </tbody>


</table>